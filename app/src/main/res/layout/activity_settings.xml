<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SettingsBackgroundStyle"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/backToMainActivity">

        <ImageView
            android:src="@drawable/ic_arrow_back"
            android:layout_marginStart="@dimen/padding_for_settings"
            android:layout_marginTop="@dimen/padding_for_settings"
            style="@style/BackMainActivityStyle"/>

        <TextView
            android:layout_marginStart="28dp"
            android:layout_marginTop="14dp"
            android:text="@string/settings"
            android:textSize="@dimen/text_size"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            tools:targetApi="p"
            style="@style/BackMainActivityStyle"/>
    </LinearLayout>


    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:layout_marginTop="80dp">

        <androidx.appcompat.widget.SwitchCompat
            android:text="@string/night_theme"
            style="@style/ActivitySettingsStyle"/>

        <TextView
            android:id="@+id/share"
            android:text="@string/share"
            app:drawableEndCompat="@drawable/ic_share"
            style="@style/ActivitySettingsStyle"/>

        <TextView
            android:id="@+id/support"
            android:text="@string/support"
            app:drawableEndCompat="@drawable/ic_support"
            style="@style/ActivitySettingsStyle"/>

        <TextView
            android:id="@+id/agreement"
            android:text="@string/agreement"
            app:drawableEndCompat="@drawable/ic_arrow_forward"
            style="@style/ActivitySettingsStyle"/>
    </LinearLayout>
</FrameLayout>