<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    android:orientation="vertical">

    <LinearLayout
        style="@style/PlayerBackgroundStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/playlistPhoto"
            android:layout_width="@dimen/playlist_photo_size"
            android:layout_height="@dimen/playlist_photo_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_placeholder"
            app:layout_constraintDimensionRatio="H, 1:1" />

        <TextView
            android:id="@+id/playlistName"
            style="@style/ArtistNameAndTrackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            tools:text="ЗАГОЛОВОК" />

        <TextView
            android:id="@+id/numberOfTracks"
            style="@style/ArtistNameAndTrackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            tools:text="Описание" />
    </LinearLayout>
</FrameLayout>