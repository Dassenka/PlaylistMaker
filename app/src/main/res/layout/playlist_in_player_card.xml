<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlistInPlayerCard"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlistInPlayerCardPhoto"
        android:layout_width="@dimen/track_size"
        android:layout_height="@dimen/track_size"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlistInPlayerCardName"
            style="@style/TrackName"
            tools:text="Some text" />

        <TextView
            android:id="@+id/playlistInPlayerCardNumberOfTracks"
            style="@style/TrackDescription"
            android:layout_width="wrap_content"
            tools:text="Some text" />
    </LinearLayout>
</LinearLayout>