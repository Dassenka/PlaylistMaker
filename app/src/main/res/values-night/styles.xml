<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SettingsBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="BackMainActivityStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ActivitySettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/text_start</item>
        <item name="android:layout_marginEnd">@dimen/text_end</item>
        <item name="android:paddingVertical">@dimen/text_top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_second</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="thumbTint">@color/switch_thumb_night</item>
        <item name="trackTint">@color/switch_track_night</item>
    </style>

    <style name="InputEditText">
        <item name="android:background">@drawable/search_field</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingVertical">7dp</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">text</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="ClearIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">7dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:visibility">gone</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="TrackName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_second</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackDescription">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/artist_name_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Ellipse">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="TrackArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="InternetError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_internet_error_dark_mode</item>
    </style>

    <style name="SearchError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_search_error_dark_mode</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="ButtonUpdate" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="ButtonClearHistory" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="TrackRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="PlayerBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>


    <style name="DefaultTextPlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/input_hint_tint</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">@dimen/activity_player_attribute_size</item>
    </style>

    <style name="TrackAttributesPlayer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">@dimen/activity_player_attribute_size</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonPlay" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ProgressTrackTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">@dimen/artist_name_size</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArtistNameAndTrackName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BackToSearchButton">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="MediaLibBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="MediaTabLayoutStyle">
        <item name="android:background">@color/black</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/MediaTabLayoutTextStyle</item>
    </style>

    <style name="MediaTabLayoutTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">@dimen/text_pager_adapter</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="bottomNavigationStyle">
        <item name="android:background">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_bottom_nav</item>
    </style>
</resources>